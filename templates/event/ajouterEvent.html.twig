{% extends "event/back.html.twig" %}
{% block body %}
{{ form_start(form) }}
<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Ajouter event</h3></div>
            <div class="card-body">
                <form>
                    <div class="form-floating mb-3 form-control">
                        
                        {{form_errors(form)}}
                        {{ form_row(form._token) }}
                    </div>

                    <div class="form-floating mb-3 form-control">
                        
                        {{form_row(form.nom)}}
                    </div>
                    <div class="form-floating mb-3 form-control">
                        
                        {{form_row(form.description)}}
                    </div>
                    <div class="form-floating mb-3 form-control">
                        
                        {{form_row(form.imageFile)}}
                    </div>
                    <div class="form-floating mb-3 form-control">
                        {{form_row(form.organiseur)}}
                    </div>
                    <div class="form-floating mb-3 form-control">
                        {{form_row(form.participants)}}
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="password.html"></a>
                        {{form_row(form.Submit)}}
                    </div>
                    <div class="form-floating mb-3 form-control">
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><a href="{{path('afficher-event')}}">Return</a></div>
            </div>
        </div>
    </div>
</div>




{{ form_end(form)}}
{% endblock %}