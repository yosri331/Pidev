{% extends "event/back.html.twig" %}
{% block body %}
{{ form_start(form) }}

    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form>
                        <div class="form-floating mb-3">
                            <i class="form-control ">{{form_label(form.nom)}}
                                {{form_widget(form.nom)}}
                            </i>
         
                            
                        </div>
                        <div class="form-floating mb-3">
                            <i class="form-control">{{form_label(form.description)}}
                                {{form_widget(form.description)}}</i>
                        </div>
                        <div class="form-floating mb-3">
                            <i class="">{{form_label(form.imageFile)}}
                                {{form_widget(form.imageFile)}}</i>
                        </div>
                        <div class="form-floating mb-4">
                            <div class="form-control">{{form_label(form.organiseur)}}
                                {{form_widget(form.organiseur)}}</div>
                        </div>
                        <div class="form-floating mb-3">
                            <div class="form-control">{{form_label(form.participants)}}
                                {{form_widget(form.participants)}}</div>
                        </div>
                        
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" style="visibility: hidden;" href="password.html">Forgot Password?</a>
                            <div>{{ form_row(submit) }}</div>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>
</main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
{{ form_end(form) }}
{% endblock %}