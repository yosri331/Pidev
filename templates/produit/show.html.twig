{% extends 'back-office.html.twig'%}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Détails du produit</h1>
    <table class="table">
        <tbody>

            <tr>
                <th>Nom produit</th>

                <td>{{ produit.nomprod }}</td>
            </tr>
            <tr>
                <th>Dsecription produit</th>
                <td>{{ produit.dsecriptionprod }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{asset('uploads/images/products/' ~ produit.getimageprod())}}" ></td>
            </tr>
            <tr>
                <th>Disponibilité</th>
                <td>{{ produit.disponibilite }}</td>
            </tr>
            <tr>
                <th>Prix du produit</th>
                <td>{{ produit.prix }}</td>
            </tr>
        </tbody>
    </table>
<div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label class="btn btn-secondary active">

    <a href="{{ path('produit_search') }}">back to list</a>
    </label>
        <label class="btn btn-secondary">
    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
        </label>
            <label class="btn btn-secondary">
    {{ include('produit/_delete_form.html.twig') }}
            </label>
</div>
{% endblock %}
