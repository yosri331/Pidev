                            <div class="d-flex justify-content-center">
                                <h6>{{ terrains.prix }}</h6><h6 class="text-muted ml-1"><del>{{ terrains.prix }}</del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="{{ path('show_terrain', {'id': terrains.id}) }}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
{% block js %}

<script>
    window.onload=()=>{
        let calendarElt = document.querySelector("#calendrier")
        let calendar= new FullCalendar.Calendar(calendarElt,{
            initialView: 'dayGridMonth',
            locale:'fr',
            headerToolbar:{
                start:'dayGridMonth,timeGridWeek',
                center:'title',
                end:'prev,next today'
            }

            {#events: /*{{ data | raw }}  #}
        })
        calendar.render()
    }
</script>
