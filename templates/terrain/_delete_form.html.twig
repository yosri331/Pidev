<form method="post" action="{{ path('terrain_delete', {'id': terrain.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ terrain.id) }}">
    <button class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;">
        <i class="material-icons text-sm me-2">delete</i>Delete</button>
</form>
